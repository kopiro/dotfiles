[push]
	default = simple

[user]
	name = Flavio De Stefano
	signinkey = FF2903D4
	useConfigOnly = true

[commit]
	gpgsign = true

[credential]
  	helper = osxkeychain

[core]
	excludesfile = ~/.gitignoreg
   	ignorecase = false

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
        required = true
	process = git-lfs filter-process

[gpg]
	program = /usr/local/MacGPG2/bin/gpg

[fetch]
	prune = true
	
[pull]
	rebase = true

[init]
	defaultBranch = main
	
[hub]
	host = ghe.spotify.net
